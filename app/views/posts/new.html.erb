<div class ="container">
<h3>スケジュール新規作成</h3>
<%= render "shared/error", obj: @post %>

 <%= form_with model:@post do |f|%>
  <table class = "signin">
   <tr>
    <th><%= f.label :content,"タイトル" %></th>
    <td><%= f.text_field :content %></td>
   </tr>
   <tr>
    <th><%= f.label :start_date,"開始日"%></th>
    <td><%= f.date_field :start_date %></td>
   </tr>
   <tr>
    <th><%= f.label :end_date,"終了日"%></th>
    <td><%= f.date_field :end_date %></td>
   </tr>
    <th><%= f.label :all_day,"終日"%></th>
    <td><%= f.check_box :'all_day' %><br>終日の場合はチェックを入れます</th>
   <tr>
    <th><%= f.label :schedule_memo,"スケジュールメモ"%></th>
    <td class ="textarea"><%= f.text_area :schedule_memo %></td>
   </tr>
  </table>

  <div class = "submit">
   <%= f.submit "スケジュールを新規登録する" %>
   <button><%= link_to("スケジュール一覧に戻る","/posts",class:"back-to-indexbtn")%></button>
  </div>
 <% end %>

 <div class = "footer">
    <div class = "now-date">
     <h2>現在の日時:<%= Date.today.strftime("%Y年%-m月%-d日") %></h2>
    </div>
   </div>
</div>

