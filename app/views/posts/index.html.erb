<div class = "main posts-top">
 <div class = "container">
  <h1>スケジュール一覧</h1>

  <% if flash[:notice] %>
   <p class= "notice"><<%= flash[:notice]%></p>
  <% end %>

  <table class = "task-list">
   <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>スケジュール更新日時</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
   </tr>
   
    <% @posts.each do |post| %>
    <tr>
    <td><%= post.id %></td>
    <td><%= post.content %></td>
    <td><%= post.start_date.strftime("%Y年%m月%d日") %></td>
    <td><%= post.end_date.strftime("%Y年%m月%d日") %></td>
    <td>
     <% if post.all_day == true %>
     ○
     <% else %>
     <% end %>
    </td>
    <td><%= post.created_at.strftime("%Y年%m月%d日%H時%M分")%></td>
    <td><%= link_to("確認","/posts/#{post.id}")%></td>
    <td><%= link_to("編集","/posts/#{post.id}/edit")%></td>
    <td><%= link_to("削除","/posts/#{post.id}",{method: "delete"}) %></td>
    </tr>
    <% end %>
   </table>
   <div class = "login-link">
    <%= link_to("/posts/new") do %>
     <button>スケジュール新規登録</button>
    <% end %>
   </div>
 </div>
 <div class = "footer">
    <div class = "now-date">
     <h2>現在の日時:<%= Date.today.strftime("%Y年%-m月%-d日") %></h2>
     <h2>スケジュール合計:<%= @posts.count %></h2>
    </div>
   </div>
</div>